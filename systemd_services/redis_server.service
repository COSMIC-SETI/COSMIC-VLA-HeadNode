[Unit]
Description=Initialisation of the redis server
After=network.target
Requires=network.target

[Service]
Type=simple
Restart=always
ExecStart=/usr/local/bin/init_redis_server.sh
ExecStop=pkill -ef "/bin/bash /usr/local/bin/init_redis_server.sh"
StartLimitIntervalSec=0

[Install]
WantedBy=multi-user.target